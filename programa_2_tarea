def bubble_sort(fila):
    """Ordena una fila de la matriz en orden ascendente usando Bubble Sort"""
    n = len(fila)
    for i in range(n - 1):
        for j in range(n - 1 - i):
            if fila[j] > fila[j + 1]:
                fila[j], fila[j + 1] = fila[j + 1], fila[j]


matriz = []

print("ğŸ”¢ Ingresa los nuÌmeros de la matriz (3x3):")

for i in range(3):
    while True:
        try:
            fila = list(map(int, input(f"âœ Ingrese 3 nuÌmeros para la FILA {i + 1}, separados por espacio: ").split()))
            if len(fila) == 3:
                matriz.append(fila)
                break
            else:
                print("âš  ERROR: Debes ingresar exactamente 3 nuÌmeros.")
        except ValueError:
            print("âš  ERROR: Ingresa solo nuÌmeros separados por espacio.")

print("\nğŸ“‹ Matriz ingresada:")
for fila in matriz:
    print(fila)

while True:
    try:
        fila_a_ordenar = int(input("\nğŸ”¢ Ingresa el nuÌmero de la FILA que deseas ordenar (1, 2 o 3): ")) - 1
        if 0 <= fila_a_ordenar < len(matriz):
            break
        else:
            print("âš  ERROR: Ingresa un nuÌmero vaÌlido entre 1 y 3.")
    except ValueError:
        print("âš  ERROR: Ingresa un nuÌmero.")

bubble_sort(matriz[fila_a_ordenar])

print("\nâœ… Matriz con la fila ordenada:")
for fila in matriz:
    print(fila)
